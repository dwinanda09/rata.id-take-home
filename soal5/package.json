{
  "name": "graphql-crud-operations",
  "version": "1.0.0",
  "description": "GraphQL microservice with complete CRUD operations for e-commerce",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "mock:catalog": "ts-node src/mockServices/catalogMockServer.ts",
    "mock:all": "concurrently \"npm run mock:catalog\" \"npm run mock:user\" \"npm run mock:order\"",
    "proto": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/generated --grpc_out=grpc_js:./src/generated --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin -I ./proto ./proto/*.proto"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "apollo-server-express": "^3.12.0",
    "express": "^4.18.0",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "subscriptions-transport-ws": "^0.11.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "concurrently": "^7.6.0",
    "grpc-tools": "^1.12.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
